
@{
    ViewBag.Title = "CrearUserCliente";
    Layout = "~/Views/Shared/_LayoutPrincipal2.cshtml";
}

@model TesisWeb.Models.clasesClientes.VMUserCliente2

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />

<div class="container">

    <div class="row">

        <div class="col-md-6 col-sm " style="margin: 100px">
            <br />

            @using (Html.BeginForm("CrearUserCliente", "ClienteUsuario", FormMethod.Post, new { id = "formulario", @class = "frmStyle" }))
            {
                @Html.AntiForgeryToken()
                <h2 class="sub ">Información de Inicio de Sesión</h2>
                <br />
                <div class="form-group">
                    @Html.HiddenFor(x => x.IdUsuario)
                    <br />
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                    <br />

                </div>
                <br />



                <br />
                <div class="form-group">
                    @Html.LabelFor(x => x.Contraseña, new { @class = "form-control" })
                    @Html.PasswordFor(x => x.Contraseña, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Contraseña, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Rol</label>
                    @Html.DropDownListFor(x => x.IdRol, new SelectList(Model.Roles, "idRol", "descripcion", "SELECCIONE", disabledValues: "1-2"), htmlAttributes: new { @class = "form-control" })
                </div>
                <br />
                <hr />

                <br />
                <h2 class="sub ">Información de Cliente</h2>
                <br />
                <div class="form-group">
                    <label>Nombre</label>
                    @Html.TextBoxFor(x => x.Nombre, htmlAttributes: new { @class = "form-control", @id = "txtNombreCliente" })
                </div>

                <div class="form-group">
                    <label>Apellido</label>
                    @Html.TextBoxFor(x => x.Apellido, htmlAttributes: new { @class = "form-control", @id = "txtApellidoCliente" })
                </div>

                <div class="form-group">
                    <label>Teléfono</label>
                    @Html.TextBoxFor(x => x.Telefono, htmlAttributes: new { @class = "form-control", @id = "txtTelefono" })
                </div>
                <div class="form-group">
                    <label>Dirección</label>
                    @Html.TextBoxFor(x => x.Direccion, htmlAttributes: new { @class = "form-control", @id = "txtTelefono" })
                </div>
                <div class="form-group">
                    <label>Localidad</label>
                    @Html.TextBoxFor(x => x.Localidad, htmlAttributes: new { @class = "form-control" })
                </div>


                <div class="form-group">
                    <label>Provincia</label>
                    @Html.DropDownListFor(x => x.IdProvincia, new SelectList(Model.ListaProvincias, "idProvincia", "descripcion", "SELECCIONE"), htmlAttributes: new { @class = "form-control" })

                </div>

                <input type="submit" class="btn btn-outline-dark" value="Crear Cuenta" />
            }


        </div>


    </div>
</div>

<script src="~/Content/templatePrinc/assets/js/formulario.js"></script>

<script src="~/Scripts/jquery-3.6.0.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/bootstrap.js"></script>


