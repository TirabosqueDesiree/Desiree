
@{
    ViewBag.Title = "ListadoTiposProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<TesisWeb.Models.clasesProducto.TipoProducto>
<br />
<br />
<br />



<div class="container">
    <h2 style="text-align:center; color: darkslategrey">Listados de Productos</h2>
    <table class="table table-active text-primary table-hover">
        <thead class="thead-light">
            <tr>
                <th>Código</th>
                <th>Tipo Producto</th>
                <th>Acciones</th>

            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdTipoProducto</td>
                <td>@item.Descripcion</td>

                <td>
                    <a href="/Productos/EdicionTipoProducto?Id=@item.IdTipoProducto" class="btn btn-primary">Editar</a>
                    <a href="/Productos/EliminarTipoProd?Id=@item.IdTipoProducto" class="btn btn-danger">Eliminar</a>
                </td>

            </tr>
        }
    </table>

    <div>
        <a href="/Productos/CargaTipoProducto" class="btn btn-primary">Agregar un nuevo Tipo de Producto</a>

    </div>
</div>


