
@{
    ViewBag.Title = "CrearUsuario";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

@model TesisWeb.Models.clasesUsuarios.VMUsuario




<link href="~/Content/template/css/style2.css" rel="stylesheet" />
<br />


<hr />

<div class="container">

    <div class="row">
        <div class="col-md-3 col-sm">

        </div>

        <div class=" col-md-6  border p-3 form ">
            <h2 class="sub ">Crear Usuario</h2>
            @using (Html.BeginForm("CrearUsuario", "Usuarios", FormMethod.Post))
            {

                <br />

                
                <div class="form-group">

                    <label>Email</label>
                    @Html.TextBoxFor(x => x.UsuarioModel.email, htmlAttributes: new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Precio</label>
                    @Html.PasswordFor(x => x.UsuarioModel.contraseña, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Rol</label>
                    @Html.DropDownListFor(x => x.UsuarioModel.idRol, new SelectList(Model.Roles, "idRol", "descripcion", "SELECCIONE", disabledValues: "1-2"), htmlAttributes: new { @class = "form-control" })
                </div>
                <br />
                
                <br />
                <input type="submit" class="btn btn-outline-dark" value="Agregar Usuario" />

            }
        </div>
        <div class="col-md-3 col-sm">
            <table class="table table-striped text-primary table-responsive">

                <tr>
                    <th><a href="/Productos/CargaOferta" class="btn btn-primary">Agregar Oferta</a></th>
                    <th> <a href="/Productos/CargaTipoProducto" class="btn btn-primary">Agregar Tipo Producto</a></th>

                </tr>

            </table>
        </div>
    </div>

</div>



