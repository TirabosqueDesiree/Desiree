@model webPrueba1.Models.Usuario

@{
                /**/

                ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Ingrese al sistema</h4>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="coll-sm-6">Nombre de Usuario</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nombreUsuario, htmlAttributes: new { @class = "form-control", @id = "txtNombreUsuario" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="coll-sm-6">Contraseña</label>
                    <div class="col-sm-6">
                        @Html.PasswordFor(model => model.password, htmlAttributes: new { @class = "form-control", @id = "txtPassword" })
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Ingresar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

